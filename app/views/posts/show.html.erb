<!-- Banner -->
<section id="banner"></section>
    
<p id="notice"><%= notice %></p>
<p>
  <strong>제목:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>내용:</strong>
  <%= @post.content %>
</p>
<style>
  .haha {display:inline;width:100px;height:50px; }
</style>
<p>
  <strong>게시물 번호: <%= @post.id %>번</strong>
</p>

<p>
  <span class="haha">
  <%= image_tag("#{@post.image}") %>
  </span>
</p>


<tr>
  <td><%= link_to '수정', edit_post_path(@post) %></td>
  <td><%= link_to '돌아가기', posts_path %></td>
  <td><%= link_to '삭제', @post, method: :delete, data: { confirm: '정말 삭제 하시겠습니까?' } %></td>
</tr>

<!-- 댓글 달기 -->
  <hr>
    <form style="position:relative;" action ="/posts/reply_create" method="post">
      <div class="form-group">
        <input type="hidden" value="<%=@post.id%>" name="post_id"/>
        <input type="text" class="form-control" name="reply_content" placeholder="댓글"/>
      </div>
      <button type="submit" class="button special">댓글 쓰기</button>
    </form>
  <!-- 댓글 출력-->    
    <br>  
    <%@post.replies.each do |rply|%>
      <%= rply.content%>
      <button right:0; class="button special"><a href ="/posts/reply_update_view/<%=@post.id%>/<%=rply.id%>" style="align-items: right;" >수정</a></button> 
      <button style="position:relative; right:0;" class="button special"><a href="/posts/reply_destroy/<%=@post.id%>/<%=rply.id%>" style="align-items: right;">삭제</a></button>
      <br>
    <%end%>
    <br>
  <hr>
<!--댓글 end-->

