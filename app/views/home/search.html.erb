<h1>검색어는 : <%=@search_word%></h1>


<div class="posts">
  		  <% @posts.each do |post|%>
    			<article>
    				<a href="/posts/<%=post.id %>" class="image"><%= image_tag("#{post.image}") %></a>
    				<h3><%=post.title %></h3>
    				<p><%= render_with_hashtags(post.content) %></p>
    						
    				<ul class="actions">
    					<li><a href="/posts/<%=post.id %>" class="button">More</a></li>
    				</ul>
    			</article>
    		<% end %>	
  	</div>